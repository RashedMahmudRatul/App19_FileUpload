<h2 class="alert alert-info">Upload File to Server</h2>

<h4 id="msgid" class="alert alert-info">@ViewBag.msg</h4>

<div class="row">
    <div class="col-md-6">
        <form asp-action="UploadFile" enctype="multipart/form-data" method="post">
            <label>Choose File </label>
            <input type="file" name="myfile" class="form-control" /><br />
            <button type="submit" class="btn btn-success">UploadFile</button>
        </form>

    </div>
</div>

